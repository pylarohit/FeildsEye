<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/secondary"
    tools:context=".fragments.BirdsAlarmFragment">



    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardElevation="80dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:layout_gravity="center"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center"
    android:elevation="4dp">

<ImageView
    android:id="@+id/alarmIconImageView"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:src="@drawable/birdsalarm"
    android:contentDescription="Bird Alarm Icon"
    android:layout_gravity="center" />

<TextView
    android:id="@+id/alarmTitleTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Bird Alarm Control"
    android:fontFamily="@font/boldtext"
    android:textColor="#F0050505"
    android:shadowRadius="5"
    android:shadowColor="@color/black"
    android:textSize="24sp"
    android:textStyle="bold"
    android:layout_marginTop="16dp"
    android:gravity="center"/>

<TextView
    android:id="@+id/alarmSubtitleTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Control the bird alarm remotely"
    android:shadowColor="@color/black"
    android:fontFamily="@font/boldtext"
    android:shadowRadius="4"
    android:textSize="20sp"
    android:textColor="#666666"
    android:layout_marginTop="8dp"
    android:gravity="center" />

<Button
    android:id="@+id/btnTurnOnAlarm"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Turn On Alarm"
    android:fontFamily="@font/boldtext"
    android:shadowRadius="6"
    android:textSize="17dp"
    android:shadowColor="@color/black"
    android:textColor="#FFFFFF"
    android:backgroundTint="#66BB6A"
    android:layout_marginTop="24dp"
    android:paddingVertical="12dp"
    android:paddingHorizontal="32dp"
    android:background="@drawable/all_buttons" />

<Button
    android:id="@+id/btnTurnOffAlarm"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Turn Off Alarm"
    android:fontFamily="@font/boldtext"
    android:shadowRadius="6"
    android:textSize="17dp"
    android:shadowColor="@color/black"
    android:textColor="#FFFFFF"
    android:backgroundTint="#EF5350"
    android:layout_marginTop="12dp"
    android:paddingVertical="12dp"
    android:paddingHorizontal="32dp"
    android:background="@drawable/all_buttons"
    />

</LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    </FrameLayout>
