<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="80dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.EcomProduct2Fragment">


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/steel1"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/propelowing"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/steel2"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="0.5dp"
            android:layout_marginTop="250dp"
            android:background="@drawable/ecommbackground"
            android:elevation="1dp"
            android:fillViewport="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="14dp">

                <TextView
                    android:id="@+id/productTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="Mild Steel Tractor Cultivator"
                    android:fontFamily="@font/ebnormal"
                    android:textColor="@color/greenDark"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/productShortDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/ebnormal"
                    android:textSize="15dp"
                    android:text="A Mild Steel Tractor Cultivator is a durable farm tool used with tractors to loosen soil, control weeds, and prepare seedbeds."
                    android:textColor="@color/fontColor"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/productTitle" />

                <TextView
                    android:id="@+id/productPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="â‚¹ 38,500 INR"
                    android:textColor="@color/colorPrimary"
                    android:textSize="24sp"
                    android:fontFamily="@font/ebnormal"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/productShortDescription" />

                <View
                    android:id="@+id/hr1EcommItem"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/colorPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/productPrice" />

                <!-- Long Description Title -->
                <TextView
                    android:id="@+id/productLongDescTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="Product Description"
                    android:textColor="@color/fontColor"
                    android:textSize="18sp"
                    android:fontFamily="@font/ebnormal"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/hr1EcommItem" />

                <TextView
                    android:id="@+id/productLongDesc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/ebnormal"
                    android:textSize="18dp"
                    android:text="A Mild Steel Tractor Cultivator is a farming implement made from durable mild steel, designed to be attached to a tractor for soil cultivation. It is used to loosen and aerate soil, control weeds, and prepare seedbeds. With adjustable tines or shovels, it efficiently breaks up soil clumps, mixes organic matter, and enhances soil health before planting. Mild steel ensures strength, longevity, and resistance to moderate wear in agricultural operations."
                    android:textColor="@color/fontColor"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/productLongDescTitle" />
                <TextView
                    android:id="@+id/howToUseLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="7dp"
                    android:text="How to Use?"
                    android:textSize="18sp"
                    android:fontFamily="@font/ebnormal"
                    android:textColor="@color/fontColor"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/productLongDesc"
                    />
                <TextView
                    android:id="@+id/howToUseText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="7dp"
                    android:fontFamily="@font/ebnormal"
                    android:text="Here are some common types of Mild Steel Tractor Cultivators and their uses:\n\n

1.Spring Tine Cultivator:\n

Uses: Loosens soil, controls weeds, and mixes organic matter. Ideal for light to medium soils.\n\n
Rigid Tine Cultivator:

Uses: Effective for deep tillage and breaking up compacted soil. Suitable for heavier soils.\n\n
2.Disc Cultivator:\n

Uses: Breaks up soil and incorporates crop residues, effective for tilling and preparing seedbeds.\n\n
3.Chisel Plow:\n

Uses: Provides deep tillage to improve soil aeration and drainage without inverting the soil.\n\n
4.Rotary Tiller:\n

Uses: Mixes soil thoroughly and creates a fine seedbed, ideal for vegetable gardening and small plots.\n\n
5.Hydraulic Cultivator:\n

Uses: Offers adjustable tine depth and width for varied soil conditions, enhancing versatility in tillage.\n\n
These cultivators enhance soil quality and prepare land for planting, improving overall agricultural productivity.\n\n"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/howToUseLabel" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
